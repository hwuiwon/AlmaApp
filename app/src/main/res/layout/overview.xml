<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_margin"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingTop="@dimen/activity_margin2"
    android:paddingBottom="@dimen/activity_margin2">
    <TextView
        android:id="@+id/overviewTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ovString1"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/jet"
        android:paddingRight="@dimen/overview_margin"
        android:paddingTop="@dimen/assignment_margin2"/>
    <TextView
        android:id="@+id/overviewTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ovString2"
        android:textSize="19dp"
        android:textColor="@color/jet"
        android:layout_toEndOf="@+id/overviewTV1"
        android:paddingBottom="@dimen/assignment_margin3"/>
    <TextView
        android:id="@+id/overviewTV3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="@string/ovString3"
        android:layout_alignParentRight="true"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="@color/jet"
        android:paddingTop="@dimen/assignment_margin2"/>
    <TextView
        android:id="@+id/overviewTV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ovString4"
        android:textSize="15dp"
        android:textColor="@color/almaPrimary"
        android:layout_below="@+id/overviewTV2"
        android:layout_toEndOf="@+id/overviewTV1" />
</RelativeLayout>