<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hwuiwon.alma.DirectoryActivity"
    android:background="@color/almaPrimary"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/directory_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/almaPrimary"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/directoryET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textNoSuggestions"
        android:hint="@string/directoryHint"
        android:layout_margin="@dimen/activity_margin2"/>

    <Button
        android:id="@+id/directoryBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:textColor="@color/jet"
        android:padding="@dimen/activity_margin3"
        android:background="@color/white"
        android:layout_below="@+id/directoryET"
        android:layout_margin="@dimen/activity_margin2"/>

    <Space
        android:id="@+id/directorySP"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/directoryBT"/>

    <ListView
        android:id="@+id/directoryLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/base"
        android:dividerHeight="1dp"
        android:layout_below="@id/directorySP"
        android:background="@color/white">
    </ListView>

</RelativeLayout>