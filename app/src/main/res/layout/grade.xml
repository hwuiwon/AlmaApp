<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin">

    <TextView
        android:id="@+id/gradeTV1"
        android:layout_width="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content"
        android:text="@string/grade_assignment_title"
        android:textSize="19sp"
        android:textColor="@color/jet"
        android:layout_marginBottom="@dimen/assignment_margin"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/gradeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/assignment_margin"
        android:layout_below="@id/gradeTV1">

        <TextView
            android:id="@+id/gradeTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gradeTV1"
            android:layout_marginEnd="@dimen/assignment_margin"
            android:layout_marginStart="@dimen/assignment_margin"
            android:text="@string/grade_assignment_grade"
            android:textColor="@color/red"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gradeTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gradeTV2"
            android:layout_toEndOf="@id/gradeTV2"
            android:text="@string/grade_assignment_grade_percentage"
            android:textColor="@color/red"
            android:textSize="19sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gradeTV4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gradeContainer"
        android:text="@string/grade_updated_date"
        android:textSize="15sp"
        android:textColor="@color/jet"/>

    <TextView
        android:id="@+id/gradeTV5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/grade_weight"
        android:textSize="19sp"
        android:textColor="@color/jet"
        android:textStyle="italic"/>

</RelativeLayout>