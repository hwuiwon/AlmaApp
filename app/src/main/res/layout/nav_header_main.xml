<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    android:theme="@style/AppTheme.Alma.Header">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/sample"
        android:layout_marginTop="@dimen/activity_margin5"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"/>

    <TextView
        android:id="@+id/headerTV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="@dimen/activity_margin5"
        android:layout_marginEnd="@dimen/activity_margin5"
        android:layout_marginBottom="@dimen/activity_margin4"
        android:layout_marginTop="@dimen/activity_margin5"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/headerTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role"
        android:textSize="17sp"
        android:layout_below="@+id/headerTV1"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginStart="@dimen/activity_margin5"/>

</RelativeLayout>