<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Login Style -->
    <style name="AppTheme.Alma.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/almaPrimary</item>
        <item name="colorPrimaryDark">@color/almaPrimary_dark</item>
        <item name="colorAccent">@color/alma_accent</item>

        <item name="android:background">@color/almaPrimary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="android:colorButtonNormal">@color/white</item>
    </style>

    <!-- Main Style -->
    <style name="AppTheme.Alma.Main" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/almaPrimary</item>
        <item name="colorPrimaryDark">@color/almaPrimary_dark</item>
        <item name="colorAccent">@color/alma_accent</item>

        <item name="android:background">@color/color_testing</item>
        <item name="android:colorButtonNormal">@color/almaPrimary</item>
    </style>

    <style name="AppTheme.Alma.Header" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/almaPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/almaPrimary</item>
    </style>

    <style name="AppTheme.Alma.Navigation" parent="Widget.Design.NavigationView">
        <item name="colorPrimary">@color/almaPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/almaPrimary</item>
    </style>

    <style name="AppTheme.Alma.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/almaPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/almaPrimary</item>
    </style>

    <style name="AppTheme.Alma.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/almaPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
